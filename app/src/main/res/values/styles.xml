<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="settingsBackgroundColor" type="color">@android:color/white</item>
        <item name="settingsDivider">@style/SettingsDivider</item>
    </style>

    <style name="SettingsSectionTitleText">
        <item name="android:textSize">@dimen/settings_section_title_text_size</item>
        <item name="android:textColor">@color/settings_section_title_text</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SettingsTitleText" parent="@style/ListItemTitle">
        <item name="android:textSize">@dimen/settings_title_text_size</item>
        <item name="android:textColor">@color/settings_item_title_text</item>
    </style>

    <style name="SettingsSubtitleText">
        <item name="android:textSize">@dimen/settings_subtitle_text_size</item>
        <item name="android:textColor">@color/settings_item_subtitle_text</item>
    </style>

    <style name="ListItemTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/list_item_title</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SettingsDivider">
        <item name="android:background">@color/settings_divider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/settings_divider_height</item>
        <item name="android:layout_marginTop">@dimen/settings_divider_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/settings_divider_vertical_margin</item>
    </style>

    <color name="settings_section_title_text">#ffff3030</color>
    <color name="settings_item_title_text">#f00b1820</color>
    <color name="list_item_title">#de000000</color>
    <color name="settings_item_subtitle_text">#ab0b1820</color>
    <color name="settings_divider">#200b1820</color>
</resources>
